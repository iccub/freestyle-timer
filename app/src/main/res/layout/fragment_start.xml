<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bucci.test.app.MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:gravity="center" >

    <TextView
        android:text="@string/choose_timer_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToTimer"/>

    <Button
        android:id="@+id/battle_button"
        android:text="Battle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToTimer"/>

    <Button
        android:id="@+id/routine_button"
        android:text="Routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToTimer"/>

    <Button
        android:id="@+id/practice_button"
        android:text="Practice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="goToTimer"/>

</LinearLayout>